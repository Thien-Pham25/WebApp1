@model WebApp1.ViewModels.GroupedUsersViewModel
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create a new account", "Create", null, new { @class = "btn btn-primary" })
</p>

<h3>Staff Account</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">UserName</th>
            <th scope="col">Action</th>

        </tr>
    </thead>
    <tbody>
        @{int i = 0; }
        @foreach (var staff in Model.Staffs)
        {
            <tr>
                <th scope="row">@{i++; }@i</th>
                <td>@staff.UserName</td>

                <td>
                    @Html.ActionLink("Delete", "Delete", "Account", new { id = staff.Id }, new { @class = "btn btn-danger" })
                    @Html.ActionLink("Edit", "Edit", "Account", new { id = staff.Id }, new { @class = "btn btn-success" })
                    @Html.ActionLink("Details", "Details", "Account", new { id = staff.Id }, new { @class = "btn btn-info" })
                </td>
            </tr>
        }
    </tbody>
</table>

